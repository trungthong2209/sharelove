<body class="sign-in">
	<div class="wrapper">
		<div class="sign-in-page">
			<div class="signin-popup">
				<div class="signin-pop">
					<div class="row">
						<div class="col-lg-6">
							<!-- Hiển thị giới thiệu về trang web-->
							<div class="cmp-info">
								<div class="cm-logo">
                  LOGO
									
