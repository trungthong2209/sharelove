<body class="sign-in">
	<div class="wrapper">
		<div class="sign-in-page">
			<div class="signin-popup">
				<div class="signin-pop">
					<div class="row">
						<div class="col-lg-6">
							<!-- Hiển thị giới thiệu về trang web-->
							<div class="cmp-info">
								<div class="cm-logo">
                  LOGO
									
									<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatibus hic incidunt ipsum vitae doloribus, alias atque repellendus possimus maiores quae, a in delectus nihil aperiam magni distinctio inventore fuga asperiores.</p>
								</div>
								<img src="images/cm-main-img.png" alt="">			
							</div><!--kết thúc tab giới thiệu-->
						</div>
						<div class="col-lg-6">
              
                <div class="login-sec">      
                    <div class="sign_in_sec current" id="tab-1">
                      <h3>Đăng Ký</h3>
                      <form action="/regis/store" method="POST">
                        <div class="row">
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input type="text" name="fullname" id="fullname" placeholder="Họ và tên">
                              <i class="la la-user"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input type="text" name="login_name" id="login_name" placeholder="Tên đăng nhập">
                              <i class="la la-user"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input type="text" name="email" id="email" placeholder="Nhập Email">
                              <i class="la la-user"></i>
                            </div>
                          </div>

                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <i class="la la-group"></i>
                              <select name="sex" id="sex">
                                <option value="Giới tính" selected="-1">Chọn giới tính</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                              </select>
                            </div>
                          </div>
                          
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input type="text" name="Numberphone" id="Numberphone" placeholder="Số điện thoại">
                              <i class="la la-phone"></i>
                            </div>
                          </div>
                          
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input name="psw" id="new-password" placeholder="Nhập mật khẩu " type="password"
													   
													    oninvalid="setCustomValidity('nhập vào một mật khẩu mạnh, có ít nhất 6 ký tự, có ít nhất một chữ hoa, và có ít nhất một chữ thường')"
													    onkeyup='check();'>
													    <i class="la la-lock"></i>
													
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input name="re-password" id="re-password" placeholder="Nhập lại mật khẩu" type="password"
													   
													    oninvalid="setCustomValidity('nhập vào một mật khẩu mạnh, có ít nhất 6 ký tự, có ít nhất một chữ hoa, và có ít nhất một chữ thường')"
													    onkeyup='check();'>
													    <i class="la la-lock"></i>
													    <b class="msge" id='message'></b>
                            </div>
                          </div>
                          
                          <div class="col-lg-12 no-pdd">
                            <button type="submit" id="submit-pass" class="registerbtn">Register</button>
                          </div>
                        </div></form>
                        
                    
    
                    </div><!--sign_in_sec end-->
                    
                  
                    
          </div><!--signin-pop end-->
              
							
