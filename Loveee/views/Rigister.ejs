                                <input type="text" name="uname" placeholder="Tên đăng nhập">
                                <i class="la la-user"></i>
                              </div>
                            </div>
                            <div class="col-lg-12 no-pdd">
                              <div class="sn-field">
                                <input type="password" name="psw" placeholder="Mật khẩu">
                                <i class="la la-lock"></i>
                              </div>
                            </div>
                            <div class="col-lg-12 no-pdd">
                              <div class="checky-sec">
                                <div class="fgt-sec">
                                 
                                  <a  href="foget" title="">Quên mật khẩu?</a>
                                </div><!--fgt-sec end-->
                                <a  href="register" title="">Chưa có tài khoản?</a>
                              </div>
                            </div>
                            <div class="col-lg-12 no-pdd ">
                              <button class="btnlog" type="submit" id="sendUser" value="submit">Đăng nhập</button>
                            </div>
                          </div>
                        
                          
                        <div class="login-resources">
                        
                          
                        </div><!--login-resources end-->
                      </form>
                      
                    </div>
                    
                  
                    
          </div><!--signin-pop end-->
              
							
