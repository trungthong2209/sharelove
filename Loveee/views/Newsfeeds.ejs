    <div class="post-popup pst-pj widget" >
      <div class="post-event">
        <h3>Thêm tin</h3>
        <div class="post-event-fields">
          <form style="height:500px; overflow-x:hidden"; action="/create/CrtEvent"  method="POST"  enctype="multipart/form-data" >
            <div class="row">
              <div class="col-lg-12">
                <input type="text" name="title" id="title" placeholder="Tiêu đề" />
              </div>
              <div class="col-lg-12">
                <div class="inp-field">
                  <select id="city" name="city">
                    <option value="000">-Chọn thành phố-</option>
                  </select>
                </div>
      </div>
      <div class="col-lg-12">
        <div class="price-sec">
          <div class="price-br">
            <select id="district" name="district">
              <option value="000">-Chọn huyện-</option>
            </select>
          </div>
          <span> </span>
          <div class="price-br">
            <select id="wards" name="wards">
              <option value="000">-Chọn phường/xã-</option>
            </select>
          </div>
        </div>
        </div>
      <div class="col-lg-12">
        <div class="price-sec">
          <div class="price-br">
            <div class="md-form md-outline">
