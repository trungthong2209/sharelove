                        </div>
                        <span><i class="la la-plus"></i></span>
                        <% }) %>
                      </div>
                   
                     
                      
                      
                      
                      <div class="view-more">
                        <a href="Top-donate" title="">Xem thêm</a>
                      </div>
                    </div>
                    <!--suggestions-list end-->
                  </div>
                  
                </div>
                
                <!--right-sidebar end-->
              </div>
            </div>
          </div>
          <!-- main-section-data end-->
        </div>   
    </main>

    <div class="post-popup pst-pj widget" >
      <div class="post-event">
        <h3>Thêm tin</h3>
        <div class="post-event-fields">
          <form style="height:500px; overflow-x:hidden"; action="/create/CrtEvent"  method="POST"  enctype="multipart/form-data" >
            <div class="row">
              <div class="col-lg-12">
                <input type="text" name="title" id="title" placeholder="Tiêu đề" />
              </div>
              <div class="col-lg-12">
                <div class="inp-field">
                  <select id="city" name="city">
                    <option value="000">-Chọn thành phố-</option>
                  </select>
                </div>
      </div>
      <div class="col-lg-12">
        <div class="price-sec">
          <div class="price-br">
            <select id="district" name="district">
              <option value="000">-Chọn huyện-</option>
            </select>
          </div>
          <span> </span>
          <div class="price-br">
            <select id="wards" name="wards">
              <option value="000">-Chọn phường/xã-</option>
            </select>
          </div>
        </div>
        </div>
      <div class="col-lg-12">
        <div class="price-sec">
          <div class="price-br">
            <div class="md-form md-outline">
              <input type="time" id="picker" name ="picker" class="form-control" placeholder="Chọn giờ">
            </div>
          </div>
          <span> </span>
          <div class="price-br">
            <input placeholder="Chọn ngày" type="date" id="date" name="date"   class="form-control">
          </div>
          <span> </span>
                  </div>
        </div>
                      <div class="col-lg-12">
                <input type="text" name="add" id="add" placeholder="Số nhà, tên đường" />
              </div>
              <div class="col-lg-12">
                <textarea
                  name="description"
                  id="description"
                  placeholder="Mô tả"
                ></textarea>
      </div>
      <div class="col-lg-12 text-center">
        <div class="row">
          <div class="col-lg-4">
            <div class="form-input">

            <label for="file-ip-1">Hình ảnh 1</label>
            <input type="file" id="file-ip-1" name='image' accept="image/*" onchange="showPreview(event);">
            <div class="preview">
              <img id="file-ip-1-preview">
            </div>
          </div>
          </div>

          <div class="col-lg-4">
            <div class="form-input">
              <label for="file-ip-2"></i>Hình ảnh 2</label>
              <input type="file" id="file-ip-2" name='image2' accept="image/*" onchange="showPreview2(event);">
              <div class="preview2">
                <img id="file-ip-2-preview2">
              </div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="form-input">
              <label for="file-ip-3"></i>Hình ảnh 3</label>
              <input type="file" id="file-ip-3" name='image3' accept="image/*" onchange="showPreview3(event);">
              <div class="preview3">
                <img id="file-ip-3-preview3">
              </div>
            </div>
          </div>
          
          
          
          
                
        </div>
        </div>
              <div class="col-lg-12">
                <ul>
                  <li>
                    <button class="active registerbtn" type="submit" onClick="getName()" id ="btnsend"  >
                      Đăng bài
                    </button>
                  </li>
                  <li><a href="javascript:history.back()" title="" class= "cancel" onclick="return confirm('Bạn chắc chắn muốn hủy bài đăng')">
                    Cancel 
                  </a></li>
                </ul>
              </div>
            </div>
          </form>
        </div>
        <!--post- event-fields end-->
        <a href="#" title="" class= "cancel"><i class="la la-times-circle-o " ></i></a>
      </div>
      <!--post- event end-->
    </div>
    <!--post- event-popup end-->
    
