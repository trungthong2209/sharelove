                            <li><a href="#" title="">Chỉnh sửa</a></li>
                            <li><a href="delete/" title="">Xóa</a></li>
                           
                          </ul>
                        </div>
                      </div>
                      <div class="epi-sec">
                        <ul class="descp">
      
                          <li>
                            <img src="images/icon9.png" alt="" /><span
                              ><%= infevent.address_Ward %> <%= infevent.address_District %> <%= infevent.address_City %></span
                            >
                          </li>
                        </ul>
                        
                      </div>
                      <div class="event_descp">
                        <h3><%= infevent.purpose %></h3>
                        <ul class="event-dt">
                          <li><a href="#" title=""> <%= infevent.time %> <%= infevent.date %> </a></li>
                          <li><a href="#" title="">Số người tham gia:    <%= infevent.Joined_er%> </a></li>
                          
                        </ul>
                        <p>
                          <%= infevent.description%>
                         
                        </p>
                        <img class= "img-fluid rounded"  src="<%= infevent.Image_URL %>" alt="">
                        <img class= "img-fluid rounded"  src="<%= infevent.Image_URL2 %>" alt="">
                        <img class= "img-fluid rounded"  src="<%= infevent.Image_URL3 %>" alt="">

                      </div>
                      <div class="event-status-bar">
                        <% if(loggedIn != null && loggedIn.trim() != '') { %>
                          <ul class="like-com">
                            <li>
                              <button class=" btn " type="button"  href="room/<%=infevent._id%>"><i class="fa fa-plus-circle"></i></i> Tham gia</button>
                            </li>
                            <li>
                              <button class="btn 7" data-toggle="modal" data-target="#exampleModalScrollable"><i class="fa fa-usd"></i></i> Ủng hộ</button>
                              <button data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo" class="btn 7" href="#"><i class="fa fa-usd"></i></i> Ủng hộ</button>
                            </li>
                          </ul>
                        <% } else{ %>
                          <ul class="like-com">
                            <li>
                              <button data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo" class=" btn " href="#"><i class="fa fa-plus-circle"></i></i> Tham gia</button>
                            </li>
                            <li>
                              <button data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo" class="btn 7" href="#"><i class="fa fa-usd"></i></i> Ủng hộ</button>
                            </li>
                          </ul>
                          
                        <% } %>
                        
                       
                      </div>
                    </div>
                    <!--post-bar end-->
                    <% }) %>
                    
                    
                    
                    
                  </div>
