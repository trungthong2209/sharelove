    <script>
        var socket = io("http://localhost:3000")
        function sendBlock(value) {
        socket.emit("block", (value));  
        }
         socket.on('blockSuccess', function(data){
             $(':button').map(function(){
                if(this.id == data.data){
                if(data.status==1){
                    $('#'+this.id+'').text('Mở khóa');
                }
                   else{
                    $('#'+this.id+'').text('Khóa');
                   }
                }
            })
        })

    </script>