      </nav>
    
      
      <main>
        <form action="/forgetpassword/<%= token %>/store" method="POST">
          <div class="tab-pane " id="nav-password" role="tabpanel" >
              <div class="tdmk">
              <div class="acc-setting">
                <h3>Thay đổi mật khẩu</h3>
                <form>
                    
                  <div class="cp-field">
                    <h5>Mật khẩu mới</h5>
                    <div class="cpp-fiel">
                      <input name="re-password" id="re-password" placeholder="Nhập mật khẩu mới" type="password"
                      pattern="(?=.*[a-z])(?=.*[A-Z]).{6,}" 
                      oninvalid="setCustomValidity('nhập vào một mật khẩu mạnh, có ít nhất 6 ký tự, có ít nhất một chữ hoa, và có ít nhất một chữ thường')"
                      onkeyup='check();'>
                      <i class="fa fa-lock"></i>
                      
                    </div>
                </div>
                    <div class="cp-field">
                        <h5>Nhập lại mật khẩu mới</h5>
                        <div class="cpp-fiel">
                          <input name="re-password" id="re-password" placeholder="Nhập lại mật khẩu mới" type="password"
													pattern="(?=.*[a-z])(?=.*[A-Z]).{6,}" 
													oninvalid="setCustomValidity('nhập vào một mật khẩu mạnh, có ít nhất 6 ký tự, có ít nhất một chữ hoa, và có ít nhất một chữ thường')"
													onkeyup='check();'>
													<i class="fa fa-lock"></i>
													<span id='message'></span>
                        </div>
                    </div>
                    
                    <div class="save-stngs pd2">
                        <ul>
                            <li><button type="submit" id="submit-pass" class="registerbtn">Đồng ý</button></li>
                            
                        </ul>
                    </div>
                </form>
            </div>
          </div>
          </div>
          </form>
