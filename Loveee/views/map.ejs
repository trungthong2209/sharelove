<link href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet' />
<%include header%>
<main>
  <div class="container">
      
      <div class="map">
          <div class="title-map">
              <h2>Sự kiện gần bạn</h2>
          </div>
          <div id='map' style='width: 100%; height: 100%; border-radius: 5px;'></div>
      </div>
  </div>
  
</main>
<%include footer%>
  
<script>
mapboxgl.accessToken = 'pk.eyJ1IjoidHJ1bmd0aG9uZzIyMDkiLCJhIjoiY2todmh0Z3V6MW1xYzJ4a3plcnFwczNrZSJ9.56LESCjX0r2JxW5KhcXxlA';
var map = new mapboxgl.Map({
container: 'map',
style: 'mapbox://styles/mapbox/streets-v11',
zoom: 6,
center:[108.53097049543746, 13.54671315869928]
});
async function getStores() {
 var res = await fetch('/address/store')
const data = await res.json();
  console.log(data)
 const stores = data.data.map(address_1 => {
   
    return {
      type: 'Feature',
      geometry: {
        type: 'Point',
        coordinates: [
        address_1.location.coordinates[0],
        address_1.location.coordinates[1]
        ]
      },
      properties: {
        purpose: address_1.purpose,
        icon: 'garden'
      }
    };
  });
  loadMap(stores);
}
function loadMap(stores) {
  map.on('load', function() {
    
    map.addLayer({
      id: 'points',
      type: 'symbol',
      source: {
        type: 'geojson',
        data: {
          type: 'FeatureCollection',
          features: stores
        }
      },
      layout: {
        'icon-image': '{icon}-11',
        'icon-size': 1.1,
        'text-field': '{purpose}',
        'text-font': ['Open Sans Semibold', 'Arial Unicode MS Bold'],
        'text-offset': [0, 0.9],
        'text-anchor': 'top'
      }
    });
  });
}

getStores();
 
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body>
</html>